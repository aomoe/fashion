<h3>My Fashion</h3>
    <div class="center-container">
      <h2>新規登録</h2>

      <%= form_with model: resource, url: registration_path(resource_name), local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :name, "ユーザーネーム"  %>
            <%= f.text_field :name%>
          </div>

          <div class="field">
            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email %>
          </div>

          <div class="field">
            <%= f.label :password, "パスワード" %>
            <% if @minimum_password_length %>
              <%= f.password_field :password, placeholder: "英数字 #{@minimum_password_length} 文字以上" %>
            <% end %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, "パスワード(確認)" %>
            <%= f.password_field :password_confirmation, placeholder: "パスワード再入力" %>
          </div>

          <div class="actions">
            <%= f.submit "新規登録" %>
          </div>
      <% end %>
      <div class="text-center">
        アカウントを作成することで
        <%= link_to  '利用規約', '#' %>
        及び
        <%= link_to 'プライバシーポリシー', '#' %>
        <br>に同意したものとみなします。
      </div>
    </div>
