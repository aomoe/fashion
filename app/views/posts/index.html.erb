<%= render 'search_form' %>
<%= render 'search_results_info' %>
<div class="profile-actions">
  <%= link_to "+ 投稿スタート", new_post_path, class: "btn primary start-post" %>
</div>

<div class="posts-grid">
  <% @posts.each do |post| %>
    <div class="post-card">
      <%= link_to post_path(post), class: "post-image-link" do %>
        <div class="post-image">
            <% if post.image.attached? %>
              <%= image_tag post.image, size: "300x300" %>
            <% else %>
              <div class="no-image">画像なし</div>
            <% end %>
        </div>
      <% end %>

          <div class="post-info">
              <div class="user-info">
                  <i class="user-icon"></i>
                  <span class="username"><%= post.user.name %></span>
              </div>
              <div class="like-section">
                  <%= like_button_for(post) %>
              </div>
          </div>
    </div>
  <% end %>
</div>
