<div class="search-container">
    <%= form_with url: search_posts_path, method: :get, local: true, class: "search-form" do |f| %>
        <div class="search-input-group">
            <%= f.text_field :keyword,
                placeholder: "キーワード検索",
                value: @keyword,
                class: "search-input" %>
        </div>

        <div class="filter-group">
            <%= f.select :category_id,
                options_from_collection_for_select(@categories, :id, :name, @category_id),
                { prompt: "カテゴリ" },
                { class: "filter-select" } %>

            <%= f.select :tag_id,
                options_from_collection_for_select(@tags, :id, :name, @tag_id),
                { prompt: "タグ" },
                { class: "filter-select" } %>

            <%= f.select :style_category,
                options_for_select(@style_categories.map { |k, v| [enum_display_name(Post, :style_category, k), k] }, @style_category),
                { prompt: "骨格" },
                { class: "filter-select" } %>

            <%= f.select :height_range,
                options_for_select(@height_ranges.map { |k, v| [enum_display_name(Post, :height_range, k), k] }, @height_range),
                { prompt: "身長" },
                { class: "filter-select" } %>
        </div>

        <%= f.submit "検索", class: "search-button" %>
    <% end %>
</div>
